# Backend Environment Configuration Template
# Copy this file to .env and update with your actual values

# Flask Secret Key - Generate a strong random key for production
SECRET_KEY=generate_a_strong_secret_key_here

# JWT Secret Key - Optional, defaults to SECRET_KEY if not set
# JWT_SECRET_KEY=generate_a_different_jwt_secret_here

# File Upload Configuration
UPLOAD_FOLDER=uploads

# Server Configuration
PORT=5000
FLASK_ENV=development

# Database Configuration (when implemented)
# DATABASE_URL=sqlite:///guitartabs.db

# CORS Configuration (for production)
# CORS_ORIGINS=https://yourdomain.com
